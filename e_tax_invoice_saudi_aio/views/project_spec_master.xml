<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="terms_condition_master_id" model="ir.ui.view">
        <field name="name">terms.condition.master.name</field>
        <field name="model">terms.condition.master</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="category_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="specification_id" invisible="1"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="terms_condition_master_tree_id" model="ir.ui.view">
        <field name="name">terms.condition.master.tree.view</field>
        <field name="model">terms.condition.master</field>
        <field name="arch" type="xml">
            <tree string="Terms and Conditions">
                <field name="category_id"/>
            </tree>
        </field>
    </record>

    <record id="terms_condition_master_action_id" model="ir.actions.act_window">
        <field name="name">Terms and Conditions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">terms.condition.master</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="terms_condition_master_tree_id"/>
    </record>

    <menuitem name="Terms and Conditions" id="terms_condition_master" parent="sale.menu_sale_config" action="terms_condition_master_action_id" sequence="1"/>


</odoo>