<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.only.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description_sale']" position="after">
                <field name="arabic_desc"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_product_normal_website_form_view_info">
        <field name="name">product.product.normal.view.info</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description_sale']" position="after">
                <field name="arabic_desc"/>
            </xpath>

        </field>
    </record>


</odoo>