<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position='after'>
                <field name="is_maintenance" invisible="1"/>
            </xpath>

<!--            <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position='before'>-->
<!--                <field name="pad_id" domain="[('product_tmpl_id.is_pad', '=', True)]"-->
<!--                       options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>-->
<!--                <field name="pad_qty"/>-->
<!--            </xpath>-->

        </field>
     </record>

    <record id="action_maintenance_orders" model="ir.actions.act_window">
        <field name="name">Maintenance Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{'default_is_maintenance': True}"/>
        <field name="domain">[('is_maintenance', '=', 'True')]</field>
        <field name="view_id" ref="sale.view_order_tree"/>
    </record>

    <menuitem id="maintenance_orders"
        name="Maintenance Orders"
        parent="sale.sale_order_menu"
        groups="sales_team.group_sale_manager"
        action="action_maintenance_orders"
        sequence="7"
    />

    <record id="action_orders" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
        <field name="context">{}</field>
        <field name="domain">[('maintenance', '=', False),('state', 'not in', ('draft', 'sent', 'cancel'))]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new sale!
            </p><p>
                Once the quotation is confirmed, it becomes a sales order.<br/> You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>

</odoo>