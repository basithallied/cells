<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="act_shipment_tracking_id" model="ir.actions.act_window">
        <field name="name">Shipment Tracking Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shipment.tracking.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_shipment_tracking_report_form"/>
        <field name="target">new</field>
    </record>

    <record id="view_shipment_tracking_report_form" model="ir.ui.view">
        <field name="name">Shipment Tracking Report</field>
        <field name="model">shipment.tracking.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to" />
                        <field name="partner_id" domain="[('supplier_rank', '>', 0)]"/>
                    </group>
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="summary" readonly="1" filename="file_name" class="oe_inline"/>
                    </group>
                </group>
                <footer>
                    <group>
                        <button name="print_shipment_report" string="Print Report"
                                type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </group>
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="menu_report_shipment_id" name="Shipment Tracking Report" action="act_shipment_tracking_id"
              parent="purchase.purchase_report"/>

</odoo>

