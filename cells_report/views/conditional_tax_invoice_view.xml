<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_condition_form" model="ir.ui.view">
        <field name="name">Invoice Condition Wizard</field>
        <field name="model">invoice.condition.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="condition_type"/>
                    </group>
                </group>
                <footer>
                    <group>
                        <button name="print_report" string="Print Report"
                                type="object" class="oe_highlight"/>
                        <button special="cancel" data-hotkey="z" string="Cancel" class="btn-secondary"/>
                    </group>
                </footer>
            </form>
        </field>
    </record>

     <record id="account_invoice_form_inherit_button" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel']" position='after'>
                <button name="print_conditional_invoice" class="oe_highlight" string="Saudi VAT Invoice" type="object"
                attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
                <button name="print_conditional_invoice_arabic" class="oe_highlight" string="Saudi VAT Invoice Arabic" type="object"
                attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position='after'>
                <button name="print_vendor_bill" class="oe_highlight" string="Vendor Bill" type="object"
                attrs="{'invisible': [('move_type', 'in', ('out_invoice', 'out_refund', 'out_receipt'))]}"/>
            </xpath>
        </field>
     </record>




</odoo>

