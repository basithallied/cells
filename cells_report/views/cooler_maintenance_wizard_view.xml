<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <record id="view_cooler_maintenance_report_form" model="ir.ui.view">
        <field name="name">Cooler Maintenance Report</field>
        <field name="model">cooler.maintenance.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to" />
                    </group>
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="summary" readonly="1" filename="file_name" class="oe_inline"/>
                    </group>
                </group>
                <footer>
                    <group>
                        <button name="print_maintenance_report" string="Print Report"
                                type="object" class="oe_highlight"/>
                    </group>
                </footer>
            </form>
        </field>
    </record>


         <record id="views_purchase_order_form_inherit_terms" model="ir.ui.view">
        <field name="name">purchase.order.form.inherits.terms</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='products']" position="after">
                <page string="Terms And Conditions" name="project_spec">
                    <group>
                    <field name="sh_in_report"/>
                    <field name="term_conditions"/>
                    <field name="terms_detail"/>
                    </group>
                </page>
            </xpath>


        </field>
     </record>



    <record id="act_cooler_maintenance_report_id" model="ir.actions.act_window">
        <field name="name">Cooler Maintenance Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cooler.maintenance.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_cooler_maintenance_report_form"/>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_maintenance_sales_id" name="Cooler Maintenance Report" action="act_cooler_maintenance_report_id"
              parent="sale.menu_sale_report" sequence="6"/>

</odoo>

