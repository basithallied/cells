<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="act_cooler_sales_report_id" model="ir.actions.act_window">
        <field name="name">Cooler Sales Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cooler.sales.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_cooler_sales_report_form"/>
        <field name="target">new</field>
    </record>

    <record id="view_cooler_sales_report_form" model="ir.ui.view">
        <field name="name">Cooler Sales Report</field>
        <field name="model">cooler.sales.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to" />
                    </group>
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="summary" readonly="1" filename="file_name" class="oe_inline"/>
                    </group>
                </group>
                <footer>
                    <group>
                        <button name="print_sale_report" string="Print Report"
                                type="object" class="oe_highlight"/>
                    </group>
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="menu_report_sales_id" name="Cooler Sales Report" action="act_cooler_sales_report_id"
              parent="sale.menu_sale_report" sequence="5"/>

</odoo>

