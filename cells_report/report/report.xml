<odoo>
    <report id="action_report_quotation"
                string="Quotation / Order Arabic"
                model="sale.order"
                report_type="qweb-pdf"
                name="cells_report.quotation_arabic"
                print_report_name="'Quotation / Order Arabic - %s - %s' % (object.partner_id.name or '', object.name)"
                file="cells_report.quotation_arabic"/>

    <report id="action_report_purchase"
                string="Purchase Order Arabic"
                model="purchase.order"
                report_type="qweb-pdf"
                name="cells_report.purchaseorder_arabic"
                print_report_name="'Purchase Order Arabic - %s - %s' % (object.partner_id.name or '', object.name)"
                file="cells_report.purchaseorder_arabic"/>


    <report id="action_report_invoice_arabic"
                string="Invoice Arabic"
                model="account.move"
                report_type="qweb-pdf"
                name="cells_report.report_invoice_arabic"
                print_report_name="'Invoice Arabic - %s - %s' % (object.partner_id.name or '', object.name)"
                file="cells_report.report_invoice_arabic"
                menu='False'
    />


    <report id="action_report_vendor_arabic"
                string="Vendor Arabic"
                model="account.move"
                report_type="qweb-pdf"
                name="cells_report.report_vendor_arabic"

                print_report_name="'Vendor Arabic - %s - %s' % (object.partner_id.name or '', object.name)"
                file="cells_report.report_vendor_arabic"
                menu = 'False'
    />


    <record id="purchase.report_purchase_quotation" model="ir.actions.report">
        <field name="name">Request for Quotation</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase.report_purchasequotation</field>
        <field name="report_file">purchase.report_purchasequotation</field>
        <field name="print_report_name">'Request for Quotation - %s' % (object.name)</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
