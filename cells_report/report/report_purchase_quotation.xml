        <xpath expr="//div[@class='page']" position="replace">
            <div class="oe_structure"/>

            <h2>Request for Quotation<span t-field="o.name"/></h2>

            <br/>

            <table class="table table-sm">
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_currency" class="text-left"><strong>Currency</strong></th>
                        <th name="th_total_qty" class="text-left"><strong>Total Quantity</strong></th>
                        <th name="th_terms" class="text-left"><strong>Terms</strong></th>
                        <th name="th_delivered" class="text-left"><strong>Delivered By</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="total_qty" t-value="0"/>
                    <t t-foreach="o.order_line" t-as="order_line">
                        <t t-set="total_qty" t-value="total_qty+order_line.product_qty"/>
                    </t>
                     <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                        <td id="currency_id">
                            <span t-field="o.currency_id.name"/>
                        </td>
                         <td id="total_qty">
                            <span t-esc="total_qty"/>
                        </td>
                         <td id="payment_term_id">
                            <span t-field="o.payment_term_id.name"/>
                        </td>
                         <td id="user_id">
                            <span t-field="o.user_id.name"/>
                        </td>

                     </tr>
                </tbody>
            </table>


            <table class="table table-sm">
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_description"><strong>Description</strong></th>
                        <th name="th_expected_date" class="text-center"><strong>Expected Date</strong></th>
                        <th name="th_quantity" class="text-right"><strong>Qty</strong></th>
                        <th name="th_unit_cost" class="text-right"><strong>Unit Cost</strong></th>
                        <th name="th_amount" class="text-right"><strong>Amount</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="o.order_line" t-as="order_line">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                            <t t-if="not order_line.display_type">
                                <td id="product">
                                    <span t-field="order_line.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="order_line.date_planned"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="order_line.product_qty"/>
                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="order_line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="order_line.price_subtotal"/>
                                </td>
                            </t>
                            <t t-else="">
                                <td colspan="99" id="section">
                                    <span t-field="order_line.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                        <th colspan="4" class="text-right"><strong>Total Amount</strong></th>
                        <th class="text-right"><strong><span t-field="o.amount_total"/></strong></th>
                    </tr>
                </tbody>
            </table>

            <p t-field="o.notes"/>

            <div class="oe_structure"/>
        </xpath>
    </template>

</odoo>