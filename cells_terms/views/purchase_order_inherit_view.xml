<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_order_form_inherit_terms" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.terms</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='products']" position="after">
                <page string="Terms and Conditions" name="project_spec">
                    <group>
                        <field name="terms_category_id"/>
                    </group>
                </page>
            </xpath>
        </field>
     </record>
</odoo>