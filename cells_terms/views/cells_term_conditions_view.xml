<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cells_terms_and_conditions_form" model="ir.ui.view">
        <field name="name">cells.terms.conditions.form</field>
        <field name="model">cells.terms.conditions</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="term_category_id"/>
                        </group>
                        <group>
                            <field name="language"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="term_id" invisible="1"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cells_terms_conditions_tree" model="ir.ui.view">
        <field name="name">cells.terms.conditions.tree</field>
        <field name="model">cells.terms.conditions</field>
        <field name="arch" type="xml">
            <tree string="Terms and Conditions">
                <field name="name"/>
                <field name="term_category_id"/>
            </tree>
        </field>
    </record>

    <record id="action_cells_terms_conditions" model="ir.actions.act_window">
        <field name="name">Terms and Conditions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cells.terms.conditions</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="cells_terms_conditions_tree"/>
    </record>

    <menuitem name="Terms and Conditions" id="cells_terms_and_conditions" parent="sale.menu_sale_config"
              action="action_cells_terms_conditions" sequence="11"/>

</odoo>