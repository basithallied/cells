<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_tax_invoice_form">
        <field name="name">tax.invoice.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='invoice_tab']" position="after">
                <page string="Terms and Conditions" name="project_spec">
                    <group>
                        <field name="terms_category_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>